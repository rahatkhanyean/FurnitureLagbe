<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products/Cart</title>

    <!-- box icons  -->
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <!-- styles  -->
    <link rel="stylesheet" href="css/product_module3.css">
</head>

<body>
    <!-- HEADER  -->
    <header>
        <!-- NAV  -->
        <div class="nav container">
            <a href="#" class="logo"><span>Furniture</span>Lagbe</a>
            <li><a href="/">Home</a></li>
            <li><a href="../productsandcart/index.html">Products</a></li>
            <li><a href="/userprofile" class="nav_link">Profile</a></li>
            <!-- CART ICON  -->
            <i class='bx bx-shopping-bag' id="cart-icon"></i>

            <!-- CART  -->
            <div class="cart">
                <h2 class="cart-title">Your Cart</h2>

                <!-- CONTENT  -->
                <div class="cart-content">


                </div>

                <!-- TOTAL   -->
                <div class="total">
                    <div class="total-title">Total</div>
                    <div class="total-price">$0</div>
                </div>
                <!-- BUY BUTTON  -->
                <button type="button" class="btn-buy">Buy Now</button>
                <!-- CART CLOSE  -->
                <i class='bx bx-x' id="cart-close"></i>
            </div>
        </div>
    </header>

    <div class="modal" id="alertModal">
        <div class="modal-content">
          <span class="close" onclick="closeAlertModal()">&times;</span>
          <p id="alertMessage"></p>
        </div>
      </div>

    <!-- SHOP SECTION  -->
    <section class="shop container">
        <h2 class="section-title">Shop Products</h2>

        <div class="filters">
            <!-- Search bar -->
            <div class="search-container">
                <input type="text" id="searchInput" placeholder="Search by name">
                <button id="searchButton">Search</button>
            </div>
        
            <!-- Category buttons -->
            <button class="filter-btn active" data-category="all">All</button>
            <button class="filter-btn" data-category="new">New</button>
            <button class="filter-btn" data-category="best-sellers">Best Sellers</button>
            <button class="filter-btn" data-category="specials">Specials</button>
            <!-- Add more filter buttons for each category -->
        
            <!-- Sorting buttons -->
            <button class="sort-btn" data-sort="lowToHigh">Low to High</button>
            <button class="sort-btn" data-sort="highToLow">High to Low</button>
        </div>

        <!-- CONTENT  -->
        <div class="shop-content">
            <% for (let i = 0; i < gp_product_array.length; i++) { %>
                <div class="product-box" data-category="<%= gp_product_array[i].category.toLowerCase() %>">


                <img src="<%= gp_product_array[i].gp_image %>" alt="" class="product-img">
                <h2 class="product-title"><%= gp_product_array[i].gp_name %></h2>
                <span class="product-price">$<%= gp_product_array[i].gp_new_price %></span>
                <i class='bx bx-shopping-bag add-cart'></i>
              </div>
            <% } %>
          </div>
          

    <!-- link js  -->
    <script src="js\module3_product.js"></script>
</body>

</html>